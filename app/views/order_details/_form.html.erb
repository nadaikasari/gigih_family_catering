<%= form_with(model: order_detail) do |form| %>
  <% if order_detail.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order_detail.errors.count, "error") %> prohibited this order_detail from being saved:</h2>

      <ul>
        <% order_detail.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
  <%= form.hidden_field :order_id, class: "form-control", value: session[:order_id] %>
      
  <div class="mb-3 row">
    <%= form.label :menu, style: "display: block", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :menu_id, Menu.all.pluck(:name,:id),{prompt:'Select Menu'},{class: "form-control", id: "menu"}%>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :quantity, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-1">
      <%= form.text_field :quantity, class: "form-control" %>
    </div>
  </div>
        
  <div>
    <%= form.submit %>
  </div>
    
<% end %>
