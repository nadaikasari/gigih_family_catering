<p style="color: green"><%= notice %></p>

<h1>Orders <%= link_to "New order", new_order_path, class: "btn btn-success" %> </h1>

<div class="table">
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Customer Email</th>
        <th scope="col">Status</th>
        <th scope="col" colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.order_date %></td>
          <td><%= order.find_customer %></td>
          <td><%= order.status %></td>
          <td><%= link_to "Information", order %></td>
          <td><%= link_to "Add Menu Order", order %></td>
          <td><%= link_to "Order Menu Details", "order_details?id=#{order.id}"  %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
