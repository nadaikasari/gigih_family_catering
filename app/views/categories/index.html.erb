<div class="container">
  <h1>Categories <%= link_to "New Category", new_category_path, class: "btn btn-success" %></h1> 

  <div class="table">
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Tools</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <td>1</td>
          <td><%= category.name %></td>
          <td><%= link_to "Show this category", category %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>
  
